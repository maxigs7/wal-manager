{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "@/*": ["./*"],
      "@/m/*": ["./modules/*"],
      "@chakra-ui/hooks": ["./lib/chakra-ui/hooks"],
      "@chakra-ui/hooks/old": ["../node_modules/@chakra-ui/hooks/dist/index"],
      "@chakra-ui/react": ["./lib/chakra-ui/react"],
      "@chakra-ui/react/old": ["../node_modules/@chakra-ui/react/dist/index"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es5",
    "typeRoots": ["../node_modules/@types"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],

  "exclude": [
    "dist",
    "out",
    "node_modules",
    "postcss.config.js",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "coverage",
    "bak"
  ]
}
